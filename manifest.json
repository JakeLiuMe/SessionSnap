{
  "manifest_version": 3,
  "name": "Session Snap",
  "version": "1.0.0",
  "description": "Save, organize, and restore your browser tabs. Never lose your work again! One-click session saving with instant restore.",
  "author": "Jake Liu",
  "homepage_url": "https://github.com/JakeLiuMe/SessionSnap",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Session Snap - Save Your Tabs"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Open Session Snap"
    },
    "quick-save": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "Quick save current session"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
